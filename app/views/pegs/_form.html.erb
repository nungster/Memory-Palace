<%= simple_form_for(@peg) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :title %>
    <%= f.input :first_name %>
    <%= f.input :middle_name %>
    <%= f.input :last_name %>

    <%= f.input :place %>
    <%= f.input :action %>
    <%= f.input :link %>
    <%= f.input :note %>
    <%= f.input :palace_id, :as => :hidden, :palace_id => { :value => @peg.palace_id } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>

  </div>
<% end %>
